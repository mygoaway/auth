{
  "title": "Auth Service Dashboard",
  "uid": "auth-service",
  "version": 1,
  "schemaVersion": 38,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "type": "row",
      "title": "Business Metrics",
      "gridPos": {
        "x": 0,
        "y": 26,
        "w": 24,
        "h": 1
      },
      "collapsed": false,
      "id": 102
    },
    {
      "type": "timeseries",
      "title": "Login Attempts (by channel & result)",
      "id": 10,
      "gridPos": {
        "x": 0,
        "y": 27,
        "w": 12,
        "h": 6
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "sum(rate(auth_login_attempts_total{application=\"auth-service\"}[1m])) by (channel, result)",
          "legendFormat": "{{channel}} - {{result}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "JWT Tokens Issued",
      "id": 11,
      "gridPos": {
        "x": 12,
        "y": 27,
        "w": 12,
        "h": 6
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "sum(rate(auth_token_issued_total{application=\"auth-service\", type=\"ACCESS\"}[1m])) by (channel)",
          "legendFormat": "{{channel}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps"
        }
      }
    },
    {
      "type": "stat",
      "title": "Rate Limit Exceeded (total)",
      "id": 12,
      "gridPos": {
        "x": 0,
        "y": 33,
        "w": 8,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "sum(increase(rate_limit_exceeded_total{application=\"auth-service\"}[1h])) by (type)",
          "legendFormat": "{{type}}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Token Refresh (success / fail)",
      "id": 13,
      "gridPos": {
        "x": 8,
        "y": 33,
        "w": 8,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "sum(increase(auth_token_refresh_total{application=\"auth-service\"}[1h])) by (result)",
          "legendFormat": "{{result}}"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Logouts (single / all)",
      "id": 14,
      "gridPos": {
        "x": 16,
        "y": 33,
        "w": 8,
        "h": 4
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "sum(increase(auth_logout_total{application=\"auth-service\"}[1h])) by (type)",
          "legendFormat": "{{type}}"
        }
      ]
    },
    {
      "type": "row",
      "title": "Cache",
      "gridPos": {
        "x": 0,
        "y": 37,
        "w": 24,
        "h": 1
      },
      "collapsed": false,
      "id": 103
    },
    {
      "type": "timeseries",
      "title": "Cache Hits vs Misses",
      "id": 15,
      "gridPos": {
        "x": 0,
        "y": 38,
        "w": 12,
        "h": 6
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "sum(rate(cache_gets_total{application=\"auth-service\", result=\"hit\"}[1m])) by (name)",
          "legendFormat": "hit - {{name}}"
        },
        {
          "expr": "sum(rate(cache_gets_total{application=\"auth-service\", result=\"miss\"}[1m])) by (name)",
          "legendFormat": "miss - {{name}}"
        }
      ]
    },
    {
      "type": "gauge",
      "title": "Cache Hit Rate (%)",
      "id": 16,
      "gridPos": {
        "x": 12,
        "y": 38,
        "w": 12,
        "h": 6
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "100 * sum(rate(cache_gets_total{application=\"auth-service\", result=\"hit\"}[5m])) / (sum(rate(cache_gets_total{application=\"auth-service\", result=\"hit\"}[5m])) + sum(rate(cache_gets_total{application=\"auth-service\", result=\"miss\"}[5m])))",
          "legendFormat": "Hit Rate"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "green",
                "value": 90
              }
            ]
          }
        }
      }
    },
    {
      "type": "row",
      "title": "IDP (Login Channel)",
      "gridPos": {
        "x": 0,
        "y": 44,
        "w": 24,
        "h": 1
      },
      "collapsed": false,
      "id": 104
    },
    {
      "type": "piechart",
      "title": "Login Success by IDP",
      "id": 17,
      "gridPos": {
        "x": 0,
        "y": 45,
        "w": 8,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "options": {
        "pieType": "pie",
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": [
            "value",
            "percent"
          ]
        }
      },
      "targets": [
        {
          "expr": "sum(auth_login_attempts_total{application=\"auth-service\", result=\"success\"}) by (channel)",
          "legendFormat": "{{channel}}",
          "instant": true
        }
      ]
    },
    {
      "type": "piechart",
      "title": "Login Failure by IDP",
      "id": 18,
      "gridPos": {
        "x": 8,
        "y": 45,
        "w": 8,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "options": {
        "pieType": "pie",
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": [
            "value",
            "percent"
          ]
        }
      },
      "targets": [
        {
          "expr": "sum(auth_login_attempts_total{application=\"auth-service\", result=\"fail\"}) by (channel)",
          "legendFormat": "{{channel}}",
          "instant": true
        }
      ]
    },
    {
      "type": "row",
      "title": "Email / Phone Verification",
      "gridPos": {
        "x": 0,
        "y": 53,
        "w": 24,
        "h": 1
      },
      "collapsed": false,
      "id": 105
    },
    {
      "type": "stat",
      "title": "이메일 인증 발송 수 (타입별)",
      "id": 20,
      "gridPos": {
        "x": 0,
        "y": 54,
        "w": 12,
        "h": 6
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "sum(auth_email_verification_total{application=\"auth-service\", action=\"sent\"}) by (type)",
          "legendFormat": "{{type}}",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "background"
      }
    },
    {
      "type": "stat",
      "title": "이메일 인증 성공/실패 (타입별)",
      "id": 21,
      "gridPos": {
        "x": 12,
        "y": 54,
        "w": 12,
        "h": 6
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "sum(auth_email_verification_total{application=\"auth-service\", action=~\"success|failure\"}) by (action, type)",
          "legendFormat": "{{type}} - {{action}}",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        }
      },
      "options": {
        "reduceOptions": {
          "calcs": [
            "lastNotNull"
          ]
        },
        "orientation": "horizontal",
        "textMode": "auto",
        "colorMode": "background"
      }
    },
    {
      "type": "piechart",
      "title": "이메일 인증 실패 원인 분포",
      "id": 22,
      "gridPos": {
        "x": 0,
        "y": 60,
        "w": 8,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "options": {
        "pieType": "pie",
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": [
            "value",
            "percent"
          ]
        }
      },
      "targets": [
        {
          "expr": "sum(auth_email_verification_failure_total{application=\"auth-service\"}) by (reason)",
          "legendFormat": "{{reason}}",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "decimals": 0
        }
      }
    },
    {
      "type": "stat",
      "title": "이메일 인증 성공률 (%)",
      "id": 24,
      "gridPos": {
        "x": 8,
        "y": 60,
        "w": 16,
        "h": 8
      },
      "datasource": {
        "type": "prometheus",
        "uid": "PBFA97CFB590B2093"
      },
      "targets": [
        {
          "expr": "100 * sum(auth_email_verification_total{application=\"auth-service\", action=\"success\"}) / (sum(auth_email_verification_total{application=\"auth-service\", action=\"success\"}) + sum(auth_email_verification_total{application=\"auth-service\", action=\"failure\"}))",
          "legendFormat": "성공률"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 1,
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "red",
                "value": null
              },
              {
                "color": "yellow",
                "value": 70
              },
              {
                "color": "green",
                "value": 90
              }
            ]
          }
        }
      }
    }
  ]
}